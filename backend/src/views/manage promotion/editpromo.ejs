<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit promotion</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a href='/'>Home</a>
        <a href='/createpromo'>Create Promotion</a>
        <a href='/get_listpromo'>List Promotion</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">Edit promotion</div>
            <form action="/put_promo" method="POST">
                <div class="form-group">
                    <label for="inputAddress">Voucher_code</label>
                    <input type="text" class="form-control" value="<%= promoData.voucher_code %>" name="voucher_code">
                </div>
                <div class="form-group">
                    <label for="inputAddress2">description</label>
                    <input type="text" class="form-control" value="<%= promoData.desc %>" name="[desc]">
                </div>
                <div class="form-group">
                    <label for="inputCity">quantity</label>
                    <input type="text" class="form-control" value="<%= promoData.quantity %>" name="quantity">
                </div>
                <div class="form-group">
                    <div class="form-group ">
                        <label for="inputCity">Voucher_percent</label>
                        <input type="text" class="form-control" value="<%= promoData.voucher_percent %>"
                            name="voucher_percent">
                    </div>
                </div>

                <input type="text" name="id" value="<%= promoData.id %>" hidden />

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>