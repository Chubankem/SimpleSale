<body>
    <div class="topnav">
        <a href='/'>Home</a>
        <a href='/create-ingredient'>Create Ingredient</a>
        <a href='/display-ingredient'>List Ingredient</a>
    </div>
    <div class="container">
        <div class="row">
            <form action="/post-create-ingredient" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3 mb-3">Create a new ingredient</div>
                    <div class="form-group col-md-6">
                        <label for="inputIngredientname">Ingredient Name</label>
                        <input type="text" class="form-control" name="Ingredient" placeholder="Ingredientname">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputQuantity">Quantity</label>
                        <input type="number" class="form-control" name="Quantity" placeholder="Quantity">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create Ingredient</button>
            </form>
        </div>
    </div>
