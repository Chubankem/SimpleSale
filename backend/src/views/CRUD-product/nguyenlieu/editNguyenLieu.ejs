<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Ingredient information</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-ingredient" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputQuantity">Quantity</label>
                        <input type="number" class="form-control" name="Quantity" placeholder="Quantity"
                            value="<%= ingredient.ingre_quantity %>">
                    </div>
                    <!-- <div class="form-group col-md-3">
                        <label for="inputAvartar">Avatar</label>
                        <input type="file" class="form-control" name="inputAvartar" accept="image/png, image/jpeg">
                    </div> -->
                </div>
                <input name="id" value="<%= ingredient.id %>" type="text" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>