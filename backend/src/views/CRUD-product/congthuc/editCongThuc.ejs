<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Recipe information</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>


<body>

    <div class="topnav">
        <a href='/'>Home</a>
        <a href='/create-recipe'>Create Recipe</a>
        <a href='/display-recipe'>List Recipe</a>
    </div>
    <div class="container">
        <div class="row">
            <form action="/put-recipe" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputProductId">Product Id</label>
                        <input type="tel" class="form-control" name="Productid" placeholder="ProductId"
                            value="<%= recipe.product_id %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputIngredientId">Ingredient Id</label>
                        <input type="tel" class="form-control" name="Ingredientid" placeholder="IngredientId"
                            value="<%= recipe.ingredient_id %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputIngreAmount">Ingredient Amount</label>
                        <input type="number" class="form-control" name="Ingreamount" placeholder="IngredientAmount"
                            value="<%= recipe.ingre_amount %>">
                    </div>
                    <!-- <div class="form-group col-md-3">
                        <label for="inputAvartar">Avatar</label>
                        <input type="file" class="form-control" name="inputAvartar" accept="image/png, image/jpeg">
                    </div> -->
                </div>
                <input name="id" value="<%= recipe.id %>" type="text" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>