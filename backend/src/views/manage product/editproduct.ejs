<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit product</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a href='/'>Home</a>
        <a href='/createproduct'>Create Product</a>
        <a href='/get_listproduct'>List Product</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">Edit product</div>
            <form action="/put_product" method="POST">
                <div class="form-group">
                    <label for="">Category</label>
                    <!-- <input type="text" class="form-control" value="<%= Data1.category_id %>" name="category"> -->
                    <select class="form-control" name="category">
                        <% for(let i=0; i < Data2.length; i++) { %>
                            <option value="<%= Data2[i].id %>">
                                <%= Data2[i].name %>
                            </option>
                            <% } %>
                    </select>

                </div>
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" value="<%= Data1[0].name %>" name="name">
                </div>

                <div class="form-group">
                    <label for="">Description</label>
                    <input type="text" class="form-control" value="<%= Data1[0].desc %>" name="[desc]">
                </div>
                <div class="form-group">
                    <div class="form-group ">
                        <label for="">Price</label>
                        <input type="text" class="form-control" value="<%= Data1[0].price %>" name="price">
                    </div>
                </div>

                <input type="text" name="id" value="<%= Data1[0].id %>" hidden />

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>