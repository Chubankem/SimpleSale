<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user's information</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="POST">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="Email" value="<%= user.email %>">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputFirstname">Firstname</label>
                        <input type="text" class="form-control" name="Firstname" placeholder="Firstname"
                            value="<%= user.first_name %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputLastname">Lastname</label>
                        <input type="text" class="form-control" name="Lastname" placeholder="Lastname"
                            value="<%= user.last_name %>">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputTelephone">Telephone</label>
                        <input type="tel" class="form-control" name="Telephone" placeholder="Telephone"
                            value="<%= user.telephone %>">
                    </div>
                    <!-- <div class="form-group col-md-3">
                        <label for="inputAvartar">Avatar</label>
                        <input type="file" class="form-control" name="inputAvartar" accept="image/png, image/jpeg">
                    </div> -->
                </div>
                <input name="id" value="<%= user.id %>" type="text" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>